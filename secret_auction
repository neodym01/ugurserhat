print("Secret Auction")

Offer=[]

def add_new_bid(name,price):

new={}

new[name]=price

Offer.append(new)        
while True:

a=input("NAME: ? ")

b=int(input("Offer :? "))

add_new_bid(a,b)           

e=input("Any Bid?: Y OR N ")

if e == "Y":

    True

else:

    for i in Offer:

        r=max(i)

    print(f"SOLD! :  {r}")   

    break    
print("Good_Luck")
